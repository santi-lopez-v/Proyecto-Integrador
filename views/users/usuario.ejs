<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body class="bodyEq">
        <header>
            <div class="container-fluid">
                <div>
                    <a href="/"><img class="logo" src="/img/logo.png" alt="logo"></a>
                </div>
                <%- include('../partials/navbar') %>
            </div>
        </header>

        <section class="cuerpo-home">
            <div class="banner-equipo">
                <h3>
                    MI USUARIO
                </h3>
            </div>
        </section>
        <section class="registro-cuerpo" id="registro-fondo">
            <div class="registro-formulario">
                <form action="/users/usuario" method="POST">
                    <div class="mb-3">
                        <img src="/img/img-users/<%= user.foto_perfil %>" class="card-img-top" alt="Foto Equipo">
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label may camposLog">Nombre:</label>
                        <label for="nombre" class="form-label nomJug">
                            <%= user.nombre %>
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="apellido" class="form-label may camposLog">Apellido:</label>
                        <label for="apellido" class="form-label nomJug">
                            <%= user.apellido %>
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="dni" class="form-label may camposLog">Dni:</label>
                        <label for="dni" class="form-label nomJug">
                            <%= user.dni %>
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="genero" class="form-label may camposLog">Género:</label>
                        <label for="genero" class="form-label nomJug">
                            <%= user.genero==true ? 'HOMBRE' : 'MUJER' %>
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label may camposLog">Email:</label>
                        <label for="email" class="form-label nomJug">
                            <%= user.email %>
                        </label>
                    </div>
                    <a href="/users/editar-users" class="btn btn-primary">EDITAR</a>
                    <a href="/users/logout" class="btn btn-primary">CERRAR SESIÓN</a>
                </form>
            </div>
        </section>
        <%- include('../partials/footer') %>
    </body>

</html>